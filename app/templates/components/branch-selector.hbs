{{#bs-dropdown as | dd | }}
    {{#dd.button}}
        {{if selectedBranch selectedBranch.name "Choose a branch"}}
    {{/dd.button}}
    {{#dd.menu as | menu |}}
        {{#each currentRepo.branches as | branch | }}
            {{#menu.item}}
                {{#link-to "index.user.repo.branch" currentUser currentRepo branch.name}}
                    {{branch.name}}
                {{/link-to}}
            {{/menu.item}}
        {{/each}}
    {{/dd.menu}}
{{/bs-dropdown}}
