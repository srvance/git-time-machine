{{#bs-dropdown as | dd | }}
    {{#dd.button}}
        {{if selectedBranch selectedBranch.name "Choose a branch"}}
    {{/dd.button}}
    {{#dd.menu as | menu |}}
        {{#each currentRepo.branches as | branch | }}
            {{#menu.link-to "index.user.repo.branch" currentUser currentRepo branch.name}}
                {{branch.name}}
            {{/menu.link-to}}
        {{/each}}
    {{/dd.menu}}
{{/bs-dropdown}}
